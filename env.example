# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,backend,nginx

# Database (Usado pelo Backend e Postgres)
POSTGRES_DB=gtvision_db
POSTGRES_USER=gtvision_user
POSTGRES_PASSWORD=your-strong-password-here
DB_HOST=postgres_db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis_cache:6379/0
CELERY_BROKER_URL=redis://redis_cache:6379/0
CELERY_RESULT_BACKEND=redis://redis_cache:6379/0

# FastAPI Streaming Service
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
FASTAPI_WORKERS=4
FASTAPI_RELOAD=false

# Streaming Configuration
MAX_STREAMS=50
STREAM_BUFFER_SIZE=10
STREAM_RECONNECT_ATTEMPTS=3
STREAM_RECONNECT_DELAY=5
FRAME_QUEUE_SIZE=100

# Video Processing
DEFAULT_FPS=30
MAX_FPS=60
JPEG_QUALITY=85
FRAME_RESIZE_WIDTH=1920
FRAME_RESIZE_HEIGHT=1080

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost

# Django API Integration
DJANGO_API_URL=http://backend:8000/api
DJANGO_API_TOKEN=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Security
API_KEY_HEADER=X-API-Key
API_KEYS=

# Performance
OPENCV_NUM_THREADS=4
OPENCV_BUFFER_SIZE=3