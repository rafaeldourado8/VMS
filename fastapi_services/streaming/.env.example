# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
FASTAPI_RELOAD=true
FASTAPI_WORKERS=4

# Service Configuration
SERVICE_NAME=streaming-service
SERVICE_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Stream Configuration
MAX_STREAMS=50
STREAM_BUFFER_SIZE=10
STREAM_RECONNECT_ATTEMPTS=3
STREAM_RECONNECT_DELAY=5
FRAME_QUEUE_SIZE=100

# Video Processing
DEFAULT_FPS=30
MAX_FPS=60
JPEG_QUALITY=85
FRAME_RESIZE_WIDTH=1920
FRAME_RESIZE_HEIGHT=1080

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Database (Django Backend)
DJANGO_API_URL=http://localhost:8000/api
DJANGO_API_TOKEN=your-api-token-here

# Redis (opcional - para cache e pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
API_KEY_HEADER=X-API-Key
API_KEYS=key1,key2,key3

# Performance
OPENCV_NUM_THREADS=4
OPENCV_BUFFER_SIZE=3