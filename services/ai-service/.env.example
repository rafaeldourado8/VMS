# ======================================================
# GT-Vision AI Service - Environment Variables
# ======================================================

# =========================
# Worker Configuration
# =========================
AI_WORKERS=4
AI_BATCH_SIZE=8

# =========================
# Detection Settings
# =========================
AI_CONFIDENCE=0.5
MOTION_THRESHOLD=500
MOTION_MIN_CHANGE=0.02

# =========================
# GPU Configuration
# =========================
# Set to true for NVIDIA GPU support
ENABLE_GPU=false

# =========================
# RTSP Configuration
# =========================
RTSP_ENABLED=true
RTSP_FRAME_SKIP=5

# =========================
# Backend Integration
# =========================
BACKEND_URL=http://gt-vision-backend:8000
ADMIN_API_KEY=your-admin-api-key-here

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
